import pygame
from random import randint

from Ball import Ball


pygame.init()

width, height = 400, 300
screen = pygame.display.set_mode((width, height))
pygame.display.set_caption("Falling balls")

fps = 50
clock = pygame.time.Clock()
delay = 100

running = True
key_pressed = False

list_of_balls = []
ball_radius = 20

# real velocity = fps * ball_velocity
ball_velocity = 2



while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
        elif event.type == pygame.MOUSEBUTTONDOWN:
            x, y = event.pos
            list_of_balls.append(Ball(x, y, (randint(0, 255), randint(0, 255), randint(0, 255))))

    screen_buffer = screen = pygame.display.set_mode((width, height))
    for ball in list_of_balls:
        pygame.draw.circle(screen_buffer, ball.color, ball.pos(), ball_radius)

    pygame.display.flip()
    for i, ball in enumerate(list_of_balls):
        if ball.y <= height - ball_radius:
            ball.move(0, ball_velocity)
        else:
            # if the ball has already fallen
            del list_of_balls[i]
    clock.tick(fps)

pygame.quit()
